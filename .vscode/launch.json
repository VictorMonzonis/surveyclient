{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Debug tests single run",
        "type": "node",
        "request": "launch",
        "env": { "CI": "true" },
        "runtimeExecutable": "${workspaceRoot}/survey-app/node_modules/.bin/react-scripts",
        "args": ["test", "--runInBand", "--no-cache"],
        "cwd": "${workspaceRoot}/survey-app",
        "protocol": "inspector",
        "console": "integratedTerminal",
        "internalConsoleOptions": "neverOpen"
      }
    ]
  }